<section>
  <div class="d-flex justify-content-between p-3 buc1 align-items-center">
    <div class="offcanvas offcanvas-start buc1" id="demo">
      <div class="offcanvas-header">
        <h1 class="offcanvas-title">Welcome</h1>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
      </div>
      <div class="offcanvas-body">
        <p class="fs-2 text-light"><i class="bi bi-person-circle fs-3"></i> <Span class="font-weight-bold"><%= current_user.name %></Span></p>
        <p class="fs-5 text-light">Home</p>
        <p class="fs-5 text-light">Transactions</p>
        <p class="fs-5 text-light">Make Payment</p>
        <br>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger sm" %>
      </div>
    </div>
    <i class="bi bi-list fs-1" data-bs-toggle="offcanvas" data-bs-target="#demo"></i>
    <h1 class="text-light">CATEGORIES </h1>
    <a href="#" class="text-light"><i class="bi bi-search h1"></i></a>
  </div>
  <div class="d-flex justify-content-end gap-5 buc1 pad-r">
    <%= link_to "#",class: "text-decoration-none" do %>
      <p class="text-light">Most recent</p>
    <% end %>
    <%= link_to "#",class: "text-decoration-none" do %>
      <p class="text-light">Most ancient</p>
    <% end %>
  </div>
</div>
<div class="categories m-4">
  <% if @categories.length == 0 %>
    <p>nothing to show add some!</p>
  <% else %>
    <% @categories.each do |category| %>
      <div class=" colar d-flex border p-2 rounded-1 shadow-sm mt-2 justify-content-between align-items-center">
        <div class="icon-div rounded ">
          <img class="icon" src="<%= category.icon %>" alt="">
        </div>
        <%= link_to "/categories/#{category.id}",class: "text-decoration-none" do %>
          <h6 class=""><%= category.name %></h6>
        <% end %>
        <h6 ><%= number_to_currency(category.total_expenses) %></h6>
      </div>
    <% end %>
  <% end %>
</div>
<br>
<footer class=" footer fixed-bottom d-flex cat">
  <%= link_to new_group_path, class: "  btn btn-outline-light text-decoration-none rounded-1 col-11 mx-auto" do %>
    <h4 class="mt-3">NEW CATEGORY</h4>
  <% end %>
</footer>
</section>
